<block name="customJs">
    <script language="javascript" type="text/javascript" src="/Public/Admin/js/thickbox/thickbox.js"></script>
    <script>
        initLoading();
        $(document).ready(function() {
            //动态时间选择器
            /*$("#up_time").datetimepicker({
                autoclose: true,
                language: 'zh-CN',
                pickerPosition: 'bottom-right',
                startView: 2,
                todayHighlight: true,
            });
            $("#down_time").datetimepicker({
                autoclose: true,
                language: 'zh-CN',
                pickerPosition: 'bottom-right',
                startView: 2,
                todayHighlight: true,
            });*/
            $('.number').bind('input propertychange', function() {
                var re = /^0+$/;
                var re1 = /^[0-9]/;
                if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                    $(this).val('0');
                }
            });

            var type = <?php echo $data['type']?>;
            switch (type)
            {
                case 1:
                case 2:
                    $("#gallery").hide();
                    $("#artwork").hide();
                    $("#record").hide();
                    $("#subject").hide();
                    $("#article").hide();
                    break;
                case 3:
                    $("#gallery").show();
                    $("#artwork").hide();
                    $("#record").hide();
                    $("#subject").hide();
                    $("#article").hide();
                    break;
                case 4:
                    $("#artwork").show();
                    $("#gallery").hide();
                    $("#record").hide();
                    $("#subject").hide();
                    $("#article").hide();
                    break;
                case 5:
                    $("#record").show();
                    $("#gallery").hide();
                    $("#artwork").hide();
                    $("#subject").hide();
                    $("#article").hide();
                    break;
                case 6:
                    $("#subject").show();
                    $("#gallery").hide();
                    $("#artwork").hide();
                    $("#record").hide();
                    $("#article").hide();
                    break;
                case 7:
                    $("#article").show();
                    $("#gallery").hide();
                    $("#artwork").hide();
                    $("#record").hide();
                    $("#subject").hide();
                    break;
            }
        });

        //切换链接类型
        function changeLink(v){
            switch (v)
            {
                case "1":
                case "2":
                    $("#gallery").hide();
                    $("#artwork").hide();
                    $("#record").hide();
                    $("#subject").hide();
                    $("#article").hide();
                    break;
                case "3":
                    $("#gallery").show();
                    $("#artwork").hide();
                    $("#record").hide();
                    $("#subject").hide();
                    $("#article").hide();
                    $("#link").val("");
                    break;
                case "4":
                    $("#artwork").show();
                    $("#gallery").hide();
                    $("#record").hide();
                    $("#subject").hide();
                    $("#article").hide();
                    $("#link").val("");
                    break;
                case "5":
                    $("#record").show();
                    $("#gallery").hide();
                    $("#artwork").hide();
                    $("#subject").hide();
                    $("#article").hide();
                    $("#link").val("");
                    break;
                case "6":
                    $("#subject").show();
                    $("#gallery").hide();
                    $("#artwork").hide();
                    $("#record").hide();
                    $("#article").hide();
                    $("#link").val("");
                    break;
                case "7":
                    $("#article").show();
                    $("#gallery").hide();
                    $("#artwork").hide();
                    $("#record").hide();
                    $("#subject").hide();
                    $("#link").val("");
                    break;
            }
        }

        function editImage() {
            showLoading('处理中，请稍候。。。');
            var link = $("#link").val();
            var up_time = $("#up_time").val();
            var down_time = $("#down_time").val();

            var check = true;
            var message = "";
            if ($.trim(link) == '') {
                check = false;
                message = message + "<li>链接不能为空</li>";
            }
            if (down_time<=up_time) {
                check = false;
                message = message + "<li>上线时间不正确</li>";
            }

            if (check == false) {
                hideLoading();
                $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
                var formData = new FormData($(".form-horizontal")[0]);
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('HomeBanner/edit');?>',
                    data: formData,
                    contentType: false,
                    processData: false,
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        hideLoading();
                        $.prompt("<span style=\" color:#F00\">error</span>", {
                            title: "提示",
                            buttons: {"确定": false}
                        });
                    },
                    success: function (data) {
                        if (data.error == 0) {
                            hideLoading();
                            $.prompt("修改成功！", {
                                title: "提示",
                                buttons: {"确定": true},
                                submit: function (e, v, m, f) {
                                    if (v == true) {
                                        window.location.href="{:U('HomeBanner/index')}";
                                    }
                                }
                            });

                        }else{
                            hideLoading();
                            $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                title: "提示",
                                buttons: {"确定": false}
                            });
                        }

                    }
                });
                return false;
            }
        }

        function initLoading(){
            $("body").append("<!-- loading -->" +
                "<div class='modal fade' id='loading' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' data-backdrop='static'>" +
                "<div class='modal-dialog' role='document' style='width:220px'>" +
                "<div class='modal-content'>" +
                    /*  "<div class='modal-header'>" +
                     "<h4 class='modal-title' id='myModalLabel'>提示</h4>" +
                     "</div>" +*/
                "<div class='modal-body'>" +
                "<img id='loading' src='/Public/Admin/image/loading.gif' />&nbsp;" +
                "<span id='loadingText'>处理中，请稍候。。。</span>" +
                "</div>" +
                "</div>" +
                "</div>" +
                "</div>"
            );
        }
        function showLoading(text){
            $("#loadingText").html(text);
            $("#loading").modal("show");
        }
        function hideLoading(){
            $("#loading").modal("hide");
        }

    </script>
</block>