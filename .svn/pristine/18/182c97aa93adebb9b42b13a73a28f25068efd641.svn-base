  <script src="/Public/Home/js/lib/vue.js"></script>
  <script src="/Public/Home/js/lib/element/index.js"></script>
  <script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
  <script src="/Public/Home/js/plugin/validform/validform.js"></script>
  <!-- <script src="/Public/Home/js/forget/first.js"></script> -->
  <script>
    // $(".yszform").Validform();
    $(".yszform").Validform({
    tiptype:function(msg,o,cssctl){
      if(!o.obj.is("form")){
        var tip = o.obj.parent().next().find(".Validform_checktip");
        tip.removeClass('Validform_right Validform_wrong Validform_loading');
        if(o.type == 1){
          tip.addClass('Validform_loading');
          tip.text(' ');
        }
        else if(o.type == 2){
          tip.addClass('Validform_right');
          tip.text(' ');
        }
        else if(o.type == 3) {
          tip.addClass('Validform_wrong');
          tip.text(msg);
        } 
      }
    },
    showAllError:true,
    ajaxPost:true,
    callback:function(result){
      if(result.status==1){
        window.location.href=result.url;
      }else{
        $(".imgcode").click();
        $("#imgcode").addClass('Validform_error');
        $("#finalTips").find('div').addClass('Validform_wrong');
        // $("#finalTips").text(result.info);
      }
        },
    btnSubmit:"#btn1",
    datatype:{
      "checkAccount":function(){ 
      }
    },
  });

  </script>
