<block name="customJs">
    <script>
        function delete_comment(id, obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/WebsiteConfig/deleteNews');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                alert("error");
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        var allCheck = false;
        function check_all() {
            allCheck = !allCheck;
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", allCheck);
            });
        }

        function dele_select(obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/WebsiteConfig/deleteNews');?>',
                            data: $("#newsform").serialize(),
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                alert("error");
                            },
                            success: function (data) {
                                //alert(data);
                                if (data.error == 0) {
                                    $("#loading_select").remove();
                                    $('input[name="id[]"]').each(function () {
                                        if ($(this).prop("checked") == true) {
                                            $(this).parent().parent().remove();
                                        }
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }
    </script>
</block>
