.banner {
  width: 100%;
  height: 440px;
  text-align: center;
  background-position: center center;
  background-repeat: no-repeat;
  background-image: url(../image/arts/banner.jpg);
}
.banner p {
  padding-top: 170px;
  font-size: 24px;
  font-weight: 100;
  color: #fff;
}
.banner .btn {
  display: inline-block;
  margin-top: 65px;
  width: 200px;
  height: 50px;
  font-size: 20px;
  line-height: 50px;
  color: #1a1a1a;
  background-color: #f4ad23;
  border-radius: 25px;
}
.con-wrap {
  margin-bottom: 40px;
}
.con-wrap .titles {
  position: relative;
  height: 110px;
  width: 100%;
  border-bottom: 2px solid #e3e9f7;
}
.titles h2 {
  /*position: absolute;*/
  /*top: 40px;*/
  float: left;
  margin: 50px 145px 0;
  width: 190px;
  height: 70px;
  text-indent: -2000px;
  background-color: #fff;
  background-image: url(../image/arts/arts-info.png);
  background-repeat: no-repeat;
  /*background-position: 0 0;*/
}
.titles .renzheng {
  background-position: 25px 0;
}
.titles .fenfa {
  background-position: -375px 0;
}
.titles .chuanbo {
  background-position: -775px 0;
}
.titles .guanli {
  background-position: -1175px 0;
}
.con-list li {
  float: left;
  margin: 50px;
  width: 380px;
  height: 300px;
  text-align: center;
  color: #1a1a1a;
  background-color: #fff;
  background-image: url(../image/arts/arts-info.png);
  background-repeat: no-repeat;
  transition: all 1s;
}
.con-list li:first-of-type {
  transform: translate3d(-100%, 0, 0);
}
.con-list li:last-of-type {
  transform: translate3d(100%, 0, 0);
}
.con-wrap .con-list li.animated {
  transform: translate3d(0, 0, 0);
}
.con-list .renzheng {
  background-position: 0 -100px;
}
.con-list .fenfa {
  background-position: -400px -100px;
}
.con-list .chuanbo {
  background-position: -800px -100px;
}
.con-list .guanli {
  background-position: -1200px -100px;
}
.con-list li h3 {
  margin-top: 90px;
  height: 72px;
  line-height: 72px;
  font-size: 36px;
}
.con-list li p {
  line-height: 36px;
  font-size: 20px;
}