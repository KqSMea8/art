<extend name="Public:base" />
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    编辑标签
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" action="{:U('Article/editTag')}" method="post" enctype="multipart/form-data" onsubmit="return edit();">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">标签id</label>
                            <div class="col-sm-2">
                                <input type="text" name="id" class="form-control" value="{$data['id']}" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">标签名称</label>
                            <div class="col-sm-2">
                                <input type="text" id="name" name="name" class="form-control" placeholder="标签名称" value="{$data['cn_name']}" maxlength="50">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">排序</label>
                            <div class="col-sm-1">
                                <input type="number" id="sort" name="sort" class="form-control number" value="{$data['sort']}" min="0">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="type" value="{$type}">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">确定</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="{:U('Article/tag',['page'=>$page])}" class="btn btn-default">返回</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</block>
<block name="customJs">
    <script>
        $(document).ready(function(){
            /* $('#az-id-date-selector').datetimepicker({
             format:'yyyy-mm-dd',
             language:  'zh-CN',
             weekStart: 1,
             todayBtn:  1,
             autoclose: 1,
             todayHighlight: 1,
             startView: 2,
             minView: 2,
             forceParse: 0
             })*/

            $('.number').bind('input propertychange', function() {
                var re = /^0+$/;
                var re1 = /^[0-9]/;
                if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                    $(this).val('0');
                }
            });


        });

        function edit() {
            var name = $("#name").val();
            var sort = $("#sort").val();

            var check = true;
            var message = "";
            if ($.trim(name) == '') {
                check = false;
                message = message + "<li>标签名称不能为空</li>";
            }
            if ($.trim(sort) == '') {
                check = false;
                message = message + "<li>排序不能为空</li>";
            }

            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('Article/editTag');?>',
                    data: $(".form-horizontal").serialize(),
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("error");
                    },
                    success: function (data) {
                        // alert(data);
                        if (data.error == 0) {
                            $.prompt("修改成功！", {
                                title: "提示",
                                buttons: {"确定": true},
                                submit: function (e, v, m, f) {
                                    if (v == true) {
                                        window.location.href="{:U('Article/tag',['page'=>$page])}";
                                    }
                                }
                            });

                        }else{
                            $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                title: "提示",
                                buttons: {"确定": false}
                            });
                        }

                    }
                });
                return false;
            }
        }
    </script>
</block>