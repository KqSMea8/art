</block>
<block name="customJs">
    <script>
        function check() {
           // var status = $("#status").val();

            $.ajax({
                type: 'post',
                url: '<?php echo U('Seo/check');?>',
                data: $(".form-horizontal").serialize(),
                cache: false,
                dataType: 'json',
                error: function (data) {
                    alert("error");
                },
                success: function (data) {
                    //alert(data);
                    if (data.error == 0) {
                        $.prompt("修改成功！", {
                            title: "提示",
                            buttons: {"确定": true},
                            submit: function (e, v, m, f) {
                                if (v == true) {
                                    window.location.href = "{:U('Seo/seoArticle')}";
                                }
                            }
                        });

                    } else {
                        $.prompt("<span style=\" color:#F00\">" + data.message + "</span>", {
                            title: "提示",
                            buttons: {"确定": false}
                        });
                    }

                }
            });
            return false;

        }

    </script>
</block>