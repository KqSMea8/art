html, body {
  height: 100%;
}
body {
  background: #f4f4f4;
}

/*侧边栏*/
.upload-left {
  position: relative;
  float: left;
  width: 252px;
  padding-bottom: 2000px;
  margin-bottom: -2000px;
  text-align: center;
  background-color: #ededed;
  font-size: 18px;
  color: #999;
}
.upload-left > li {
  position: relative;
  border: 1px solid #e0e0e0;
  margin-bottom: 5px;
  background-color: #fff;
}
.upload-left a {
  display: block;
  height: 48px;
  line-height: 48px;
  font-size: 16px;
  color: #333;
}
.upload-left a:hover, .upload-left a.cur {
  background-color: #e9ab32
}
.upload-left span {
  position: relative;
  display: block;
  height: 50px;
  line-height: 50px;
  padding-left: 50px;
  text-align: left;
}
.upload-left .icons {
  position: absolute;
  top: 0;
  left: 0;
  width: 50px;
  height: 50px;
}
.icons.icon-manage {
  background-position: 0 -80px;
}
.icons.icon-promote {
  background-position: -50px -80px;
}
.icons.icon-invite {
  background-position: -100px -80px;
}

/*侧边栏 end*/

/*右侧主内容区*/
.con-wrap {
  margin-left: 252px;
  height: 1180px;
  background-color: #f4f4f4;
}
.con-wrap .tit {
  height: 87px;
  padding-left: 20px;
  line-height: 87px;
  font-size: 22px;
  color: #444;
  border-bottom: 1px solid #e1e1e1;
  border-top: 1px solid #f0f0f0;
  background-color: #fff;
}
.con-wrap .sum {
  background-color: #fff;
}
.con-wrap .sum .applyed {
  height: 108px;
}
.sum .applyed .fl {
  padding: 18px 0 0 40px;
}
.sum h3 {
  font-size: 18px;
  line-height: 2;
  color: #666;
}
.sum .applyed .fl p {
  position: relative;
  padding-left: 25px;
  font-size: 14px;
  color: #999;
  line-height: 2;
}
.icons.icon-applyed {
  position: absolute;
  top: 0;
  left: 0;
  height: 28px;
  width: 25px;
  background-position: -165px -90px;
}
.sum .applyed .fr {
  padding: 30px 67px 0 0 ;
}
.sum .applyed .btn {
  margin: 0 5px;
}
.sum .applyed .btn-b {
  color: #333;
  background-color: #fff;
  border: 2px solid #d1d1d1;
}
.con-wrap .sum .unapply {
  height: 215px;
  text-align: center;
  padding-top: 38px;
}
.sum .unapply p {
  margin: 9px auto 16px;
}
.sum .unapply p span {
  padding: 5px 10px;
  font-size: 14px;
  line-height: 1;
  color: #999;
  background-color: #e0e0e0;
}
.detail {
  font-size: 14px;
  line-height: 1;
  color: #444;
}
.detail .show {
  width: 425px;
  text-align: center;
}

.detail h3 {
  padding-left: 18px;
  font-size: 18px;
  line-height: 3;
}
.detail dl {
  padding-left: 40px;
  font-size: 16px;
}
.detail dl dt {
  font-weight: 700;
  line-height: 40px;
}
.detail dl dd {
  line-height: 26px;
}
.detail .show .app{
  margin-top: 40px;
  border-radius: 6px;
  border: 1px solid #e9e9e9;
}
.detail .show p {
  margin-top: 24px;
}
.detail .show .cover {
  margin: 28px auto;
  padding: 62px 16px 0;
  width: 245px;
  height: 504px;
  background: url(../image/promote/mobile.png) no-repeat left top;
  background-size: 245px 504px;
}
.detail .show .cover img {
  width: 215px;
  height: 380px;
}
.detail .intro {
  width: 270px;
  margin-right: 80px;
}
.detail .intro ul {
  margin-top: 95px;
}
.detail .intro ul li {
  padding-left: 18px;
  line-height: 24px;
}
.detail .intro img {
  margin-top: 42px;
  width: 255px;
  height: 450px;
}
.detail .intro .btn-group {
  margin-top: 36px;
}
/*右侧主内容区 end*/

/*申请推广*/
.main-wrap .title span {
  font-size: 18px;
  color: #999;
}
.apply .first ul {
  margin: 48px 0 0 30px;
}
.apply .first ul li {
  float: left;
  margin: 0 11px;
  cursor: pointer;
}
.first ul li h3 {
  text-align: center;
  font-size: 18px;
  color: #444;
}
.first ul li .template {
  margin-top: 30px;
  padding: 74px 24px 0 25px;
  height: 517px;
  width: 260px;
  border: 2px solid #e0e0e0;
  background: url(../image/promote/mobile.png) no-repeat 9px 14px;
  -webkit-background-size: 238px 488px;
  background-size: 238px 488px;
}
.first ul li.cur .template {
  border: 2px solid #f4ad23;
}
.first ul li:hover .template {
  border: 2px solid #f4ad23;
}
.first .template img {
  width: 210px;
  height: 368px;
}
.first .btn-group {
  padding: 48px 0 74px;
}
.apply .second {
  height: 780px;
}
.second .temp-wrap {
  float: left;
  width: 595px;
}
.second .temp-wrap .template {
  position: relative;
  margin: 119px auto;
  padding-top: 60px;
  padding-left: 16px;
  width: 240px;
  height: 490px;
  background: url(../image/promote/mobile.png) no-repeat;
  -webkit-background-size: 240px 490px;
  background-size: 240px 490px;
}
.second .temp-wrap .template img {
  width: 208px;
  height: 369px;
}
.second .form {
  float: left;
  position: relative;
  margin-top: 113px;
  height: 496px;
}
.btn-s {
  margin: 6px 0;
  padding: 3px 18px;
  height: 36px;
  border: 1px solid #b6b6b6;
  border-radius: 2px;
  background-color: #fff;
  cursor: pointer;
}
.form .item {
  margin-bottom: 24px;
}
.form .item .tit {
  width: 75px;
  text-align: left;
  float: left;
  line-height: 48px;
}
.form .item .con {
  position: relative;
  float: left;
  width: 350px;
}
.form .input {
  font-size: 16px;
}
.form .btn {
  position: absolute;
  bottom: 0;
  left: 0;
}
/*申请推广 end*/