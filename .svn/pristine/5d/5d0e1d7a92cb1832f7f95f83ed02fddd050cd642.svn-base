<extend name="Public:base" />
<block name="content">
    <link href="/Public/Admin/js/jquery-impromptu/jquery-impromptu.css" rel="stylesheet">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    编辑栏目
                </div>
                <div class="panel-body">
                    <form id="form" class="form-horizontal"  method="post" action="{:U('RecommendTags/edit')}" enctype="multipart/form-data" onsubmit="return edit();">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">标签名称</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="name" name="name" value="{$data['name']}"">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">标签类型</label>
                            <div class="col-sm-2">
                                <select name="type" class="form-control">
                                    <option value="1" <?php if($data['type'] == 1) {echo 'selected';}?>>类型
                                    </option>
                                    <option value="2" <?php if($data['type'] == 2) {echo 'selected';}?>>题材
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">标签序号</label>
                            <div class="col-sm-2">
                                <input type="number" id="sort" name="sort" class="form-control number" value="{$data['sort']}" min="0">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">图片</label>
                            <div class="col-sm-10">
                                <img src="{$data['image']}" width="193" height="168" border="0" />
                                <input type="file" id="image" name="image" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="id" value="{$data['id']}">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success" id="submit">确定</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="{:U('RecommendTags/index',['type'=>$data['type']])}" class="btn btn-default">返回</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</block>
<block name="customJs">
    <script>
        $(document).ready(function(){
            $('.number').bind('input propertychange', function() {
                var re = /^0+$/;
                var re1 = /^[0-9]/;
                if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                    $(this).val('0');
                }
            });
        });
        function edit() {
            var name = $("#name").val();

            var check = true;
            var message = "";
            if ($.trim(name) == '') {
                check = false;
                message = message + "<li>标签名称不能为空</li>";
            }
            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
                var formData = new FormData($(".form-horizontal")[0]);
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('RecommendTags/edit');?>',
                    data: formData,
                    contentType: false,
                    processData: false,
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("error");
                    },
                    success: function (data) {
                       // alert(data);
                        if (data.error == 0) {
                            $.prompt("修改成功！", {
                                title: "提示",
                                buttons: {"确定": true},
                                submit: function (e, v, m, f) {
                                    if (v == true) {
                                        window.location.href="{:U('RecommendTags/index',['type'=>$data['type']])}";
                                    }
                                }
                            });

                        }else{
                            $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                title: "提示",
                                buttons: {"确定": false}
                            });
                        }

                    }
                });
                return false;
            }
        }
    </script>
</block>