    <script>
        $(document).ready(function(){
            var status = <?php echo $data['status']?>;
            var select = $("#status");
            if(0 == status) {
                select.find("option").eq(0).attr("selected","selected");
            }else  if(1 == status) {
                select.find("option").eq(1).attr("selected","selected");
            }else  if(2 == status) {
                select.find("option").eq(2).attr("selected","selected");
            }
        });

        function edit() {
            var title = $("#title").val();
            var artist = $("#artist").val();
            var cover = $("#cover").val();
            var tinymcetext= tinymce.get('contenttext').getContent();
            $("#contenttext").val(tinymcetext);

            var check = true;
            var message = "";
            if ($.trim(title) == '') {
                check = false;
                message = message + "<li>标题不能为空</li>";
            }
            if ($.trim(cover) == '') {
                check = false;
                message = message + "<li>封面不能为空</li>";
            }
            if ($.trim(tinymcetext) == '') {
                check = false;
                message = message + "<li>内容不能为空</li>";
            }
            if ($.trim(artist) == '') {
                check = false;
                message = message + "<li>用户ID不能为空</li>";
            }


            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('Article/edit');?>',
                    data: $(".form-horizontal").serialize(),
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("error");
                    },
                    success: function (data) {
                        //alert(data);
                        if (data.error == 0) {
                            $.prompt("修改成功！", {
                                title: "提示",
                                buttons: {"确定": true},
                                submit: function (e, v, m, f) {
                                    if (v == true) {
                                        window.location.href="{:U('Article/index')}";
                                    }
                                }
                            });

                        }else{
                            $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                title: "提示",
                                buttons: {"确定": false}
                            });
                        }

                    }
                });
                return false;
            }
        }
    </script>
    <script type="text/javascript">
      var vmEdit = new Vue({
        el: '#edit',
        data:{
          maskseen: false, //预览显示开关
          alertseen: false, //弹出框提示开关
          loading: true, //加载动画是否显示
          contentTarget:[], //内容标签
          selectdTarget:[], //内容标签选中的项
        },
        created: function(){
          this.getcontentTarget();
          // this.selectdTarget

          this.selectdTarget = $('#tagele').attr('data-value').split(",")!='' ? $('#tagele').attr('data-value').split(",") : [];
        },
        mounted: function(){

            ed.addButton('mybutton',{
              text:'插入',
              icon:false,
              onClick:function(){
                eventBus.$emit('showSearch');// 同级组件传参
              }
            })

          //eventBus.$emit('showSearch');// 同级组件传参
        },
        methods:{
          closemaskSeen: function() { //关闭预览蒙层
            this.maskseen = false;
            this.alertseen = false;
          },
          alertSeen: function() { //弹框显示
            this.alertseen = true;
          },
          getcontentTarget: function(){
            var self = this;
            var obj = {};
            artzheAgent.callAdmin('Article/getTags', obj, function(response){
              if (response.code == 30000 && response.data.status == 1000) {

                self.contentTarget = response.data.info.tag;
                console.log(self.contentTarget)
              }
            })
          },
          checknull: function(){
            // var self = this;
            if(this.selectdTarget.length==0){
              console.log('不能为空')
              this.$message({
                message: '内容标签不能为空',
                type: 'error'
              });
            }
          },
          uploadform: function(){
            var self = this;

            var title = $("#title").val();
            var artist = $("#artist").val();
            var cover = $("#cover").val();
            var tinymcetext= tinymce.get('contenttext').getContent();
            $("#contenttext").val(tinymcetext);

            var check = true;
            var message = "";
            if ($.trim(title) == '') {
                check = false;
                message = message + "<li>标题不能为空</li>";
            }
            if ($.trim(cover) == '') {
                check = false;
                message = message + "<li>封面不能为空</li>";
            }
            if ($.trim(tinymcetext) == '') {
                check = false;
                message = message + "<li>内容不能为空</li>";
            }
            if ($.trim(artist) == '') {
                check = false;
                message = message + "<li>用户ID不能为空</li>";
            }
            if(this.selectdTarget.length==0){
              check = false;
              message = message + "<li>内容标签不能为空</li>";
            }

            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {

                $('#tagele').val(self.selectdTarget.toString()) //将选中的tag标签转给后台

                $.ajax({
                    type: 'post',
                    url: '<?php echo U('Article/edit');?>',
                    data: $(".form-horizontal").serialize(),
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("error");
                    },
                    success: function (data) {
                        //alert(data);
                        if (data.error == 0) {
                            $.prompt("修改成功！", {
                                title: "提示",
                                buttons: {"确定": true},
                                submit: function (e, v, m, f) {
                                    if (v == true) {
                                        window.location.href="{:U('Article/index')}";
                                    }
                                }
                            });

                        }else{
                            $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                title: "提示",
                                buttons: {"确定": false}
                            });
                        }

                    }
                });
                return false;
            }
          },
        }
      })
