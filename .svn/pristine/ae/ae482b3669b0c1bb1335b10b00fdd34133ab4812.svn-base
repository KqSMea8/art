<extend name="Public:base"/>
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    首页轮播图片设置
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <a class="btn btn-default" href="{:U('Admin/WebsiteConfig/showAddImage')}">添加</a>
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="col-sm-1"></th>
                            <th class="col-sm-1">序号</th>
                            <th class="col-sm-1">图片ID</th>
                            <th class="col-sm-4">图片描述</th>
                            <th class="col-sm-3">图片</th>
                            <th class="col-sm-2">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <form name="imageform" id="imageform" action="{:U('Admin/WebsiteConfig/deleteImage')}"
                              class="form-inline">
                            <foreach name="lists" item="image" key="k">
                                <tr>
                                    <td><input name="id[]" type="checkbox" value="{$image['id']}"/></td>
                                    <td>{$image['num']}</td>
                                    <td>{$image['id']}</td>
                                    <td>{$image['des']}</td>
                                    <td>
                                        <img src="{$image['url']}" alt="" style="width:100px;">
                                    </td>
                                    <td>
                                        <a href="{:U('Admin/WebsiteConfig/showEditImage',['id'=>$image['id']])}">编辑</a>&nbsp;|
                                        <!-- <a href="{:U('Admin/WebsiteConfig/deleteImage',['id'=>$image['id']])}">删除</a>-->
                                        <a href="#" onclick="return delete_comment(<?php echo $image['id']; ?>,this)">
                                            删除</a>
                                    </td>
                                </tr>
                            </foreach>
                            <tr>
                                <th colspan="6"><a href="#" onclick="return check_all()">全选/全不选</a> &nbsp;|&nbsp;
                                    <a href="#" onclick="return dele_select(this)">删除选中的评论</a></th>
                            </tr>
                        </form>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <!-- TODO:page -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
<block name="customJs">
    <script type="text/javascript">
        function delete_comment(id, obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/WebsiteConfig/deleteImage');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                alert("error");
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        var allCheck = false;
        function check_all() {
            allCheck = !allCheck;
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", allCheck);
            });
        }
        function dele_select(obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/WebsiteConfig/deleteImage');?>',
                            data: $("#imageform").serialize(),
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                alert("error");
                            },
                            success: function (data) {
                                //alert(data);
                                if (data.error == 0) {
                                    $("#loading_select").remove();
                                    $('input[name="id[]"]').each(function () {
                                        if ($(this).prop("checked") == true) {
                                            $(this).parent().parent().remove();
                                        }
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }
    </script>
</block>
