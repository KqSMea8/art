<extend name="Public:base"/>
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    精彩花絮
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-6">
                            <form action="{:U('RecommendRecord/index')}" class="form-inline">
                                <div class="form-group">
                                    <label for="">艺术家名称</label>
                                    <input type="text" name="artistName" class="form-control" value="{$queryParam['artistName']}" style="width:100px;">
                                </div>
                                <div class="form-group">
                                    <label for="">画作名称</label>
                                    <input type="text" name="artName" class="form-control" value="{$queryParam['artName']}" style="width:100px;">
                                </div>
                                <div class="form-group">
                                    <label for="">花絮名称</label>
                                    <input type="text" name="recordTitle" class="form-control" value="{$queryParam['recordTitle']}" style="width:100px;">
                                </div>
                                <button class="btn btn-default form-control" type="submit">搜索</button>
                            </form>

                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <form action="{:U('RecommendRecord/index')}" class="form-inline pull-right">
                                <button class="btn btn-default form-control" type="submit">重置</button>
                            </form>
                        </div>
                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="col-sm-1"></th>
                            <th class="col-sm-1">ID</th>
                            <th class="col-sm-1">标题</th>
                            <th class="col-sm-1">艺术家名称</th>
                            <th class="col-sm-2">画作名称</th>
                            <th class="col-sm-2">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <form name="imageform" id="imageform" action="{:U('Admin/RecommendRecord/delete')}"
                              class="form-inline">
                            <foreach name="lists" item="image" key="k">
                                <tr>
                                    <td><input name="id[]" type="checkbox" value="{$image['id']}"/></td>
                                    <td>{$image['id']}</td>
                                    <td>{$image['title']}</td>
                                    <td>{$image['artistname']}</td>
                                    <td>{$image['artname']}</td>


                                    <td>
                                        <a href="{:U('Admin/RecommendRecord/detail',['id'=>$image['id']])}">详情</a>
                                        <if condition="$type == 1 ">
                                            &nbsp;| <a href="#" onclick="return delete_comment(<?php echo $image['id']; ?>,this)">
                                                取消推荐</a>
                                            <else />
                                            &nbsp;|<a href="#" onclick="return recommend(<?php echo $image['id']; ?>,this)">
                                                推荐</a>
                                        </if>
                                    </td>
                                </tr>
                            </foreach>
                            <tr>
                                <th colspan="10"><a href="#" onclick="return check_all()">全选/全不选</a> &nbsp;|&nbsp;
                                    <a href="#" onclick="return dele_select(this)">取消推荐选中的花絮</a></th>
                            </tr>
                        </form>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <!-- TODO:page -->
                    {$nav}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
<block name="customJs">
    <script type="text/javascript">
        function recommend(obj) {
            window.location.href="{:U('RecommendRecord/index')}";
            return false;
        }
        function recommend(id, obj) {
            $.prompt("确定推荐该花絮？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendRecord/recommend');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $("#loading" + id).remove();
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }else{
                                    $("#loading" + id).remove();
                                    $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                        title: "提示",
                                        buttons: {"确定": false}
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        function delete_comment(id, obj) {
            $.prompt("确定取消推荐该花絮？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendRecord/cancelRecommend');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $("#loading" + id).remove();
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }else{
                                    $("#loading" + id).remove();
                                    $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                        title: "提示",
                                        buttons: {"确定": false}
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        var allCheck = false;
        function check_all() {
            allCheck = !allCheck;
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", allCheck);
            });
        }
        function dele_select(obj) {
            $.prompt("确定取消推荐该花絮？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendRecord/cancelRecommend');?>',
                            data: $("#imageform").serialize(),
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                //alert(data);
                                if (data.error == 0) {
                                    $("#loading_select").remove();
                                    $('input[name="id[]"]').each(function () {
                                        if ($(this).prop("checked") == true) {
                                            $(this).parent().parent().remove();
                                        }
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }
    </script>
</block>
