<extend name="Public:base"/>
<style type="text/css" rel="stylesheet">
    div.row {
        margin-bottom: 10px;
    }
</style>
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    活动-{$subinfo['title']}详情如下：
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">活动名称</div>
                        <div class="col-md-10">{$subinfo['title']}</div>
                    </div>
                    <div style="height:3px;border-bottom: 1px solid #ccc"></div>
                    <div class="row">
                        <div class="col-md-2">活动封面</div>
                        <div class="col-md-10"><img src="{$subinfo['cover']}" width="193" height="168"/></div>
                    </div>
                    <div style="height:3px;border-bottom: 1px solid #ccc"></div>
                    <div class="row">
                        <div class="col-md-2">活动内容</div>
                        <div class="col-md-10">{$subinfo['content']|htmlspecialchars_decode}</div>
                    </div>
                    <div style="height:3px;border-bottom: 1px solid #ccc"></div>
                    <div class="row">
                        <div class="col-md-2">活动链接</div>
                        <div class="col-md-10">{$subinfo['link']|htmlspecialchars_decode}</div>
                    </div>
                    <div style="height:3px;border-bottom: 1px solid #ccc"></div>
                    <div class="row">
                        <div class="col-md-2">创建时间</div>
                        <div class="col-md-10">{$subinfo['create_time']|date="Y-m-d H:i:s",###}</div>
                    </div>
                    <div style="height:3px;border-bottom: 1px solid #ccc"></div>
                </div>
                <!-- /.panel-body -->
            </div>
           <!-- <a href="{:U('RecommendSubject/index')}" class="btn btn-default">返回</a>-->
            <a href="javascript:history.go(-1);"  class="btn btn-default">返回</a>
            <!-- /.panel -->
            <!-- /.col-lg-12 -->
        </div>
    </div>
</block>
