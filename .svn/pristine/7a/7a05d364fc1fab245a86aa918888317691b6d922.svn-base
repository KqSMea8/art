<extend name="Public:base" />
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    画作详情
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">ID</div><div class="col-md-10">{$detail['id']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">用户名</div><div class="col-md-10">{$detail['nickname']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">画作类别</div><div class="col-md-10">{$detail['categoryName']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">画作名称</div><div class="col-md-10">{$detail['name']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">更新次数</div><div class="col-md-10">{$detail['update_times']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">属性百分比</div><div class="col-md-10">{$detail['percent']}%</div>
                    </div>
                    <if condition="$detail['shape'] eq 1 ">
                            <div class="row">
                                <div class="col-md-2">画作长度</div><div class="col-md-10">{$detail['length']}</div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">画作宽度</div><div class="col-md-10">{$detail['width']}</div>
                            </div>
                        <else />
                            <div class="row">
                                <div class="col-md-2">画作直径</div><div class="col-md-10">{$detail['diameter']}</div>
                            </div>
                    </if>
                    <div class="row">
                        <div class="col-md-2">封面图</div>
                        <div class="col-md-10">
                             <a href="{$detail['cover']}" class="az-image-popup" target="_blank"><img src="{$detail['cover']}" style="width:200px;"></a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">画作全景图</div>
                        <div class="col-md-10">
                             <foreach name="detail.panorama_ids" item="img" key="k" >
                               <a href="{$img}" class="az-image-popup" target="_blank"><img src="{$img}" style="width:200px;"></a>
                             </foreach>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">画作局部图</div>
                        <div class="col-md-10">
                             <foreach name="detail.topography_ids" item="img2" key="k2" >
                               <a href="{$img2}" class="az-image-popup" target="_blank"><img src="{$img2}" style="width:200px;"></a>
                             </foreach>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">画作描述</div><div class="col-md-10">{$detail['story']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">创建时间</div><div class="col-md-10">{$detail['create_time']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">最近更新时间</div><div class="col-md-10">{$detail['last_update_time']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">画作价格</div><div class="col-md-10">{$detail['price']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">浏览数</div><div class="col-md-10">{$detail['view_total']}</div>
                    </div>
                    <div class="row" hidden>
                        <div class="col-md-2">分享数</div><div class="col-md-10">{$detail['share_total']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">喜欢数</div><div class="col-md-10">{$detail['like_total']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">评论数</div><div class="col-md-10">{$detail['comment_total']}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">标签</div><div class="col-md-10">{$detail['tag_ids']}</div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
<block name="customJs">
</block>
