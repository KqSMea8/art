<block name="customJs">
    <script>
        $(document).ready(function(){
            /* $('#az-id-date-selector').datetimepicker({
             format:'yyyy-mm-dd',
             language:  'zh-CN',
             weekStart: 1,
             todayBtn:  1,
             autoclose: 1,
             todayHighlight: 1,
             startView: 2,
             minView: 2,
             forceParse: 0
             })*/

            $('.number').bind('input propertychange', function() {
                var re = /^0+$/;
                var re1 = /^[0-9]/;
                if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                    $(this).val('0');
                }
            });


        });
        function add() {
            var type = $("#type").val();
            var name = $("#name").val();

            var check = true;
            var message = "";
            if ($.trim(type) == '') {
                check = false;
                message = message + "<li>类型不能为空</li>";
            }
            if ($.trim(name) == '') {
                check = false;
                message = message + "<li>标签名不能为空</li>";
            }

            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">" + message + "</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('Art/addTag');?>',
                    data: $("#addform").serialize(),
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("error");
                    },
                    success: function (data) {
                        //alert(data);
                        if (data.error == 0) {
                            $.prompt("添加成功！", {
                                title: "提示",
                                buttons: {"确定": true},
                                submit: function (e, v, m, f) {
                                    if (v == true) {
                                        window.location.href = "tag?type="+type;
                                    }
                                }
                            });

                        } else {
                            $.prompt("<span style=\" color:#F00\">" + data.message + "</span>", {
                                title: "提示",
                                buttons: {"确定": false}
                            });
                        }

                    }
                });
                return false;
            }
        }

        function delete_comment(id, obj) {
            var type = $("#rightType").val();
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/Art/deleteTag');?>',
                            data: {"id": id, "type": type},
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                alert("error");
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }

                            }
                        });
                    } else {

                    }
                }
            });

            return false;
        }
    </script>
</block>
