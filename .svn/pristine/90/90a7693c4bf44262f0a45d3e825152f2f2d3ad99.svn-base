/*banner*/
.banner {
  width: 100%;
  height: 440px;
  text-align: center;
  background-color: #aeb0af;
  background-position: center center;
  background-repeat: no-repeat;
  background-image: url(../image/about/banner-bg.png);
}

.banner .banner-info {
  padding-top: 25px;
}
.banner .banner-info h2 {
  height: 54px;
  text-indent: -4000px;
  background: url(../image/about/title.png) center center no-repeat;
  transform: scale(0);
  opacity: 0;
  transition: all 1s;
}
.banner.animated .banner-info h2 {
  transform: scale(1);
  opacity: 1;
}


.banner .dev-wrap {
  position: relative;
  margin: 25px auto 0;
  width: 540px;
  height: 330px;
}
.banner .dev-wrap img {
  position: absolute;
}
.banner .dev-wrap .mac {
  top: 0;
  left: 270px;
  margin-left: -199px;
  width: 398px;
  height: 329px;
}
.banner .dev-wrap .mobile-1 {
  left: 0;
  bottom: 0;
  width: 114px;
  height: 235px;
}
.banner .dev-wrap .moblie-2 {
  right: 0;
  bottom: 0;
  width: 84px;
  height: 234px;
}



/*banner end*/

