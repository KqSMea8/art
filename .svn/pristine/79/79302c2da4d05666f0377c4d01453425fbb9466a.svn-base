<block name="customJs">
    <script language="javascript" type="text/javascript" src="/Public/Admin/js/thickbox/thickbox.js"></script>
    <script type="text/javascript" src="/Public/Admin/js/artzhe_pop/artzhe_pop.js"></script>
    <link rel="stylesheet" type="text/css" href="/Public/Admin/js/artzhe_pop/artzhe_pop.css" />
    <script type="text/javascript">
        function delete_comment(id, obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/ArtcircleBanner/delete');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        var allCheck = false;
        function check_all() {
            allCheck = !allCheck;
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", allCheck);
            });
        }
        function dele_select(obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/ArtcircleBanner/delete');?>',
                            data: $("#imageform").serialize(),
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                //alert(data);
                                if (data.error == 0) {
                                    $("#loading_select").remove();
                                    $('input[name="id[]"]').each(function () {
                                        if ($(this).prop("checked") == true) {
                                            $(this).parent().parent().remove();
                                        }
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }
    </script>
</block>
