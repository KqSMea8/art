<extend name="Public:base" />
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                普通用户管理
              </div>
                <div class="panel-heading">
                    <div class="row">
                        <form action="{:U('User/index')}" class="form-inline" onsubmit="return checkForm();">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="">关键字</label>
                                    <input type="text" name="keyword" class="form-control" value="{:I('keyword')}" >
                                </div>
                                <button class="btn btn-default form-control" type="submit">查看</button>
                            </div><!-- /.col-lg-6 -->
                        </form>

                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" >
                        <thead>
                        <tr>
                            <th>用户ID</th>
                            <th>用户身份</th>
                            <th>用户头像</th>
                            <th>用户昵称</th>
                            <th>手机号码</th>
                            <th>绑定微信ID</th>
                            <th>注册时间</th>
                            <th>性别</th>
                            <th>生日</th>
                            <th>关注艺术家数</th>
                            <th>喜欢画作数</th>
                            <th>评论画作数</th>
                            <th>登陆次数</th>
                            <th>最近一次登陆时间</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <foreach name="lists" item="user" key="k" >
                            <tr>
                                <td>{$user['id']}</td>
                                <td>{$user['show_type']}</td>
                                <td>
                                  <img src="{$user['face']}" alt="" style="width:100px;height: 100px;">
                                </td>
                                <td>{$user['nickname']}</td>
                                <td>{$user['mobile']}</td>
                                <td>{$user['wechat_openid']}</td>
                                <td>{$user['create_time']}</td>
                                <td>{$user['show_gender']}</td>
                                <td>{$user['birthday']}</td>
                                <td>{$user['follow_total']}</td>
                                <td>{$user['like_total']}</td>
                                <td>{$user['comment_total']}</td>
                                <td>{$user['login_times']}</td>
                                <td>{$user['last_login_time']}</td>
                                <td><a href="{:U('User/SetToBlacklistStep1')}?user_id={$user['id']}">添加到黑名单</a></td>
                            </tr>
                        </foreach>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <!-- TODO:page -->
                    {$nav}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
