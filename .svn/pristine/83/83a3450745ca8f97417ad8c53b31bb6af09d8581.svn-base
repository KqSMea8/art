  //统计推广封面浏览量
  public function sextension(){
    $id = I('id','','number_int');
    if($id){
      $extLogic = new ArtistExtensionLogic();
      $extLogic->where(['id' => $id])->setInc('view_total');
      Util::jsonReturn(['status'=>Code::SUCCESS]);
    }else{
      Util::jsonReturn(['status'=>1001,'msg' => "id:".$id]);
    }
  }
}
