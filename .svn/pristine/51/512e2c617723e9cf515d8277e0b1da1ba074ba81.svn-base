<extend name="Public:base" />
<block name="content">
    <style type="text/css">
        td{
            padding: 5px 0px;
            margin: 0px;
            max-width: 120px;
            word-wrap:break-word;
        }
        label{
            min-width: 60px;
            display:inline-block;
        }

        .search{
            margin-right: 40px;
        }

    </style>
    <div class="row" style="min-width: 1400px;">
        <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                  画作管理
              </div>
                <div class="panel-heading">
                    <div class="row">
                        <form action="{:U('Art/index')}" class="form-inline" onsubmit="return checkForm();">
                            <div class="col-lg-12">
                                <div class="form-group search">
                                    <label for="">关键字</label>
                                    <input style="width: 200px;display:inline-block;" type="text" name="keyword" class="form-control" value="{:I('keyword')}" >
                                </div>
                                <div class="form-group search">
                                    <select style="width: 100px;display:inline-block;" id="numberType" name="numberType" class="form-control">
                                        <option value="">请选择</option>
                                        <option value="artSign" <?php if( I('numberType')=='artSign') echo 'selected="selected"';?>>艺签数</option>
                                        <option value="commentTotal" <?php if( I('numberType')=='commentTotal') echo 'selected="selected"';?>>评论数</option>
                                        <option value="likeTotal" <?php if( I('numberType')=='likeTotal') echo 'selected="selected"';?>>喜欢数</option>
                                        <option value="viewTotal" <?php if( I('numberType')=='viewTotal') echo 'selected="selected"';?>>浏览数</option>
                                    </select>
                                    <input style="width: 100px;display:inline-block;" type="number" id="snumber" name="snumber" class="form-control number" value="{:I('snumber')}" min="0">
                                    --
                                    <input style="width: 100px;display:inline-block;" type="number" id="enumber" name="enumber" class="form-control number" value="{:I('enumber')}" min="0">
                                </div>

                                <button style="width: 60px;display:inline-block;" class="btn btn-default form-control" type="submit">查看</button>
                            </div><!-- /.col-lg-6 -->
                            <div class="col-lg-12" style="height: 15px;"></div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="">显示列</label>
                                    <input type="checkbox" name="column[]" value="last_update_time" id="last_update_time" <?php if(in_array('last_update_time',I('column'))) echo checked;?>>最近更新时间
                                    <input type="checkbox" name="column[]" value="artcircle_num" id="artcircle_num" <?php if(in_array('artcircle_num',I('column'))) echo checked;?>>艺签数
                                    <input type="checkbox" name="column[]" value="view_total" id="view_total" <?php if(in_array('view_total',I('column'))) echo checked;?>>浏览数
                                    <input type="checkbox" name="column[]" value="view_total_all" id="view_total_all" <?php if(in_array('view_total_all',I('column'))) echo checked;?>>浏览总数
                                    <input type="checkbox" name="column[]" value="like_total" id="like_total" <?php if(in_array('like_total',I('column'))) echo checked;?>>喜欢数
                                    <input type="checkbox" name="column[]" value="comment_total" id="comment_total" <?php if(in_array('comment_total',I('column'))) echo checked;?>>评论数
                                    <input type="checkbox" name="column[]" value="comment_total_all" id="comment_total_all" <?php if(in_array('comment_total_all',I('column'))) echo checked;?>>评论数
                                </div>
                            </div><!-- /.col-lg-6 -->
                        </form>

                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" >
                        <thead>
                        <tr>
                            <th>用户名</th>
                            <th>画作图片</th>
                            <th>类别</th>
                            <th>画作名称</th>
                            <th>创作花絮次数</th>
                            <th>艺术圈花絮次数</th>
                            <th>属性百分比</th>
                            <th>创建时间</th>
                            <!--隐藏部分-->
                            <th <?php if(in_array('last_update_time',I('column'))){} else echo hidden;?>>最近更新时间</th>
                            <th <?php if(in_array('artcircle_num',I('column'))){} else echo hidden;?>>艺签数</th>
                            <th <?php if(in_array('view_total',I('column'))){} else echo hidden;?>>浏览数</th>
                            <th <?php if(in_array('view_total_all',I('column'))){} else echo hidden;?>>浏览总数</th>
                            <th <?php if(in_array('like_total',I('column'))){} else echo hidden;?>>喜欢数</th>
                            <th <?php if(in_array('comment_total',I('column'))){} else echo hidden;?>>评论数</th>
                            <th <?php if(in_array('comment_total_all',I('column'))){} else echo hidden;?>>评论总数</th>
                            <!--隐藏部分-->
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <foreach name="lists" item="art" key="k" >
                            <tr style="height: 120px;">
                                <td>
                                    <a href="{:U('Admin/User/showDetail',['id'=>$art['artist']])}">{$art['nickname']}</a>
                                </td>
                                <td>
                                    <if condition="$art['cover'] == '' ">
                                        <else />
                                        <img src="{$art['cover']}" alt="" style="width:100px;height: 100px;">
                                    </if>
                                </td>
                                <td>
                                    {$art['categoryName']}
                                </td>
                                <td>
                                    {$art['name']}
                                </td>
                                <td>{$art['update_times']}</td>
                                <td>{$art['artcircle_times']}</td>
                                <td>{$art['percent']}%</td>
                                <td>{$art['create_time']}</td>
                                <!--隐藏部分-->
                                <td <?php if(in_array('last_update_time',I('column'))){} else echo hidden;?>>{$art['last_update_time']}</td>
                                <td <?php if(in_array('artcircle_num',I('column'))){} else echo hidden;?>>{$art['art_sign']}</td>
                                <td <?php if(in_array('view_total',I('column'))){} else echo hidden;?>>{$art['view_total']}</td>
                                <td <?php if(in_array('view_total_all',I('column'))){} else echo hidden;?>>{$art['view_total_all']}</td>
                                <td <?php if(in_array('like_total',I('column'))){} else echo hidden;?>>{$art['like_total']}</td>
                                <td <?php if(in_array('comment_total',I('column'))){} else echo hidden;?>>{$art['comment_total']}</td>
                                <td <?php if(in_array('comment_total_all',I('column'))){} else echo hidden;?>>{$art['comment_total_all']}</td>
                                <!--隐藏部分-->
                                <td>
                                  <a href="detail?id={$art['id']}">点击查看详情</a>
                                </td>
                            </tr>
                        </foreach>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <!-- TODO:page -->
                    {$nav}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
