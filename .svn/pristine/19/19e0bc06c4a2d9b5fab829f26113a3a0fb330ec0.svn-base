namespace Think\Cache\Driver;
use Custom\Helper\Util;
use Think\Cache;
defined('THINK_PATH') or exit();

/**
 * Redis缓存驱动
 * 要求安装phpredis扩展：https://github.com/nicolasff/phpredis
 */
class Redis extends Cache {
	 /**
	 * 架构函数
     * @param array $options 缓存参数
     * @access public
     */
    public function __construct($options=array()) {
        if ( !extension_loaded('redis') ) {
            E(L('_NOT_SUPPORT_').':redis');
        }
        $options = array_merge(array (
            'host'          => C('REDIS_HOST') ? : '127.0.0.1',
            'port'          => C('REDIS_PORT') ? : 6379,
            'passwd'          => C('REDIS_PASSWD') ? : '',
            'timeout'       => C('DATA_CACHE_TIMEOUT') ? : false,
            'persistent'    => false,
						'db_index' => C('REDIS_DB_INDEX')
        ),$options);

        $this->options =  $options;
        $this->options['expire'] =  isset($options['expire'])?  $options['expire']  :   C('DATA_CACHE_TIME');
        $this->options['prefix'] =  isset($options['prefix'])?  $options['prefix']  :   C('DATA_CACHE_PREFIX');
        $this->options['length'] =  isset($options['length'])?  $options['length']  :   0;
        $func = $options['persistent'] ? 'pconnect' : 'connect';
        $this->handler  = new \Redis;
        $options['timeout'] === false ?
            $this->handler->$func($options['host'], $options['port']) :
            $this->handler->$func($options['host'], $options['port'], $options['timeout']);

        if($options['passwd']){
            if ($this->handler->auth($options['passwd']) == false) {
                die($this->handler->getLastError());
            }
        }
				$this->handler->select(isset($options['db_index']) ? $options['db_index'] : 0);
    }

    /**
     * 读取缓存
     * @access public
     * @param string $name 缓存变量名
     * @return mixed
     */
    public function get($name) {
        N('cache_read',1);
        $value = $this->handler->get($this->options['prefix'].$name);
        $jsonData  = json_decode( $value, true );
        return ($jsonData === NULL) ? $value : $jsonData;	//检测是否为JSON数据 true 返回JSON解析数组, false返回源数据
    }

    /**
     * 写入缓存
     * @access public
     * @param string $name 缓存变量名
     * @param mixed $value  存储数据
     * @param integer $expire  有效时间（秒）
     * @return boolean
     */
    public function set($name, $value, $expire = null) {
        N('cache_write',1);
        if(is_null($expire)) {
            $expire  =  $this->options['expire'];
        }
        $name   =   $this->options['prefix'].$name;
        //对数组/对象数据进行缓存处理，保证数据完整性
        $value  =  (is_object($value) || is_array($value)) ? json_encode($value) : $value;
        if(is_int($expire) && $expire) {
            $result = $this->handler->setex($name, $expire, $value);
        }else{
            $result = $this->handler->set($name, $value);
        }
        if($result && $this->options['length']>0) {
            // 记录缓存队列
            $this->queue($name);
        }
        return $result;
    }

    /**
     * 删除缓存
     * @access public
     * @param string $name 缓存变量名
     * @return boolean
     */
    public function rm($name) {
        return $this->handler->delete($this->options['prefix'].$name);
    }

    /**
     * 清除缓存
     * @access public
     * @return boolean
     */
    public function clear() {
        return $this->handler->flushDB();
    }

    //------------------------------------------------------------------------------------------v60
    /**
     * @param $key
     * @return int
     * @comment 根据 key 来删除
     */
    public function del($key){
        return $this->handler->delete($key);
    }

    /**
     * @param $key
     * @param $second----以秒为单位
     * @return bool
     * @comment 设置过期的时间
     */
    public function expire($key,$second){
        return $this->handler->expire($key,$second);
    }

    /**
     * @param $key
     * @return int
     * @comment 判断是否有设置过期时间--当 key 存在但没有设置剩余生存时间时，返回 -1
     */
    public function ttl($key){
        return $this->handler->ttl($key);
    }

    //---------------------------------------------------------------------------------------string

    /**
     * @param $key
     * @param $value
     * @return bool
     */
    public function setString($key,$value){
        return $this->handler->set($key,$value);
    }

    /**
     * @param $key
     * @return bool|string
     */
    public function getString($key){
        return $this->handler->get($key);
    }


    //---------------------------------------------------------------------------------------hash table

    /**
     * @param $key
     * @param array $field_value--表示键值对
     * @return bool
     */
    public function hashSet($key,$field_value=[]){
        return $this->handler->hMSet($key,$field_value);
    }



    //---------------------------------------------------------------------------------------set
    /**
     * @param $key
     * @param $value
     */
    public function sAdd($key,$value) {
        $this->handler->sAdd($key,$value);
    }

    public function sMembers($key){
        return $this->handler->sMembers($key);
    }



}
