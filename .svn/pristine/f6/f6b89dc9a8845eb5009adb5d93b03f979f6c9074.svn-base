      function checkForm(){
          var sdate = $("#sdate").val();
          var edate = $("#edate").val();
          var check = true;
          var message = "";
          if(sdate!='' && edate!='' && sdate>edate){
              var check = false;
              message = message + "<li>开始时间不能晚于结束时间!</li>";
          }
          if (check == false) {
              $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                  title: "提示",
                  buttons: {"确定": false}
              });
              return false;
          } else {
              return true;
          }

      }

    </script>
    <script type="text/javascript">
        function delete_comment(id, obj) {
            if (confirm("确定删除么?")) {
                $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('Topic/deleteComment');?>',
                    data: "id=" + id,
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("error");
                    },
                    success: function (data) {
                        // alert(data);
                        if (data.error == 0) {
                            $("#loading" + id).remove();
                            $(obj).parent().parent().remove();
                            location.reload();
                        }

                    }
                });
            }
            return false;
        }
        function check_all() {

            $('input[name="id[]"]').prop("checked", true);
        }

        function dis_check_all() {
            $('input[name="id[]"]').prop("checked", false);
        }

        function check_fan() {
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", function (index, attr) {
                    return !attr;
                });
            });
        }
        function dele_select(obj) {

            if (confirm("确定删除么?")) {
                $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('Topic/deleteComment');?>',
                    data: $("#commentsform").serialize(),
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("操作失败！");
                    },
                    success: function (data) {
                        //alert(data);
                        if (data.error == 0) {
                            $("#loading_select").remove();

                            $('input[name="id[]"]').each(function () {
                                if ($(this).prop("checked") == true) {
                                    $(this).parent().parent().remove();
                                }
                            });
                            location.reload();
                        }else{
                            alert(data.msg);
                        }

                    }
                });
            }
            return false;
        }
    </script>
