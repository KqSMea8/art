<extend name="Public:base"/>
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    讨论评论管理
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="{:U('Comment/index')}" class="form-inline" onsubmit="return checkForm();">
                                <div class="form-group">
                                    <label for="">用户昵称</label>
                                    <input type="text" name="nickname" class="form-control" value="{:I('nickname')}">
                                </div>
                                <div class="form-group">
                                    <label for="">评论内容</label>
                                    <input type="text" name="content" class="form-control" value="{:I('content')}">
                                </div>
                                <div class="form-group">
                                    <label for="">时间</label>
                                    <input type="date" name="sdate" class="inline form-control" id="sdate"
                                           value="{:I('sdate')}" min="2017-01-01" max="{:date('Y-m-d')}">
                                    --
                                    <input type="date" name="edate" class="inline form-control"
                                           id="edate" value="{:I('edate')}" min="2017-01-01" max="{:date('Y-m-d')}">
                                </div>

                                <button class="btn btn-default form-control" type="submit">查看</button>
                            </form>
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th></th>
                            <th>评论内容</th>
                            <th>用户ID</th>
                            <th>用户当前昵称</th>
                            <th>评论时间</th>
                            <th>操作</th>

                        </tr>
                        </thead>
                        <tbody>
                        <form name="commentsform" id="commentsform" action="{:U('Topic/deleteComment')}"
                              class="form-inline">
                            <foreach name="list" item="comment" key="k">
                                <tr>
                                    <td><input name="id[]" type="checkbox" value="{$comment['id']}"/></td>
                                    <td>
                                        <div>关于话题
                                            <if condition="$comment['type'] == '4' ">
                                                <a href="{$url}/discussion/details/{$comment['discussid']}" target="_blank"><strong style="color: #0000cc">#{$comment['topic_title']}的讨论[{$comment['discussid']}]</strong></a>
                                                <else />
                                                <a href="{$url}/discussion/detailGraphic/{$comment['discussid']}" target="_blank"><strong style="color: #0000cc">#{$comment['topic_title']}的讨论[{$comment['discussid']}]</strong></a>
                                            </if>
                                            <a></a>
                                            的评论</div>
                                        {$comment['nickname']}：{$comment['content']}
                                    </td>
                                    <td>{$comment['commenter']}</td>
                                    <td>{$comment['nickname']}</td>


                                    <td>{$comment['create_time']}</td>
                                    <td><a href="#" onclick="return delete_comment(<?php echo $comment['id']; ?>,this)">
                                            删除</a></td>
                                </tr>
                            </foreach>
                            <tr>
                                <th colspan="6"><a href="#" onclick="return check_all()">全选</a>&nbsp;/<a href="#"
                                                                                                         onclick="return dis_check_all()">全不选</a>&nbsp;/<a
                                        href="#" onclick="return check_fan()">反选</a> &nbsp;||&nbsp;&nbsp;&nbsp;<a
                                        href="#" onclick="return dele_select(this)">删除选中的评论</a></th>


                            </tr>
                        </form>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    {$nav}
                    <!-- TODO:page -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
