    <script type="text/javascript">
        
    


        function che_form() {
           
            var recommended_id = $("#recommended_id").val();
			var recommended_time_end = $("#recommended_time_end").val();

            var check = true;
            var message = "";
            if ($.trim(recommended_id) == '') {
                check = false;
                message = message + "<li>请选择</li>";
            }
			 if ($.trim(recommended_time_end) == '') {
                check = false;
                message = message + "<li>请选择截止日期</li>";
            }
           
			

            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
				return true;
				}
        }


    </script>


