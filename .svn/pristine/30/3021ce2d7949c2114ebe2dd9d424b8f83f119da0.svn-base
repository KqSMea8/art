<?php

namespace V60\Logic;

use V60\Base\BaseLogic;
use Custom\Helper\Util;
use Custom\Define\Image;

class SubjectCommentLikeLogic extends BaseLogic
{
    public function like($data)
    {
       $likeinfo = $this->where(['comment_id' => $data['comment_id'], 'liker' => $data['liker'], 'is_like' => 'Y'])->find();

        if (!$likeinfo) {

            $id = $this->add($data);
            if ($id) {
                $SubjectCommentLogic = new SubjectCommentLogic();
                $SubjectCommentLogic->where(['id' => $data['comment_id']])->setInc('like_total', 1);
            }
            return $id;
        } else {
            return 0;
        }
    }

    public function unlike($data)
    {

        $likeinfo = $this->where(['comment_id' => $data['comment_id'], 'liker' => $data['liker'], 'is_like' => 'Y'])->find();

        if($likeinfo) {
            $subjectCommentLogic = new SubjectCommentLogic();
            $subjectCommentinfo = $subjectCommentLogic->where(['id' => $data['comment_id'], 'status' =>1])->find();

            if ($subjectCommentinfo) {
                $like_count = $subjectCommentinfo['like_total'];
                if ($like_count > 1) {
                    $subjectCommentLogic->where(['id' => $data['comment_id']])->setDec('like_total', 1);
                } else {
                    $subjectCommentLogic->where(['id' => $data['comment_id']])->setField('like_total', 0);
                }

            }
            return $this->where(['comment_id' => $data['comment_id'], 'liker' => $data['liker'], 'is_like' => 'Y'])->delete();
        }else{
            return 0;
        }
    }
}
