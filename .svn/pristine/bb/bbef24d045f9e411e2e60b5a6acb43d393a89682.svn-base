<extend name="Public:base"/>
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    推荐艺术号
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="{:U('RecommendArticle/index')}" class="form-inline" onsubmit="return checkForm();">
                                <div class="form-group">
                                    <label for="">用户昵称</label>
                                    <input type="text" name="nickname" class="form-control" value="{$queryParam['nickname']}">
                                </div>
                                <div class="form-group">
                                    <label for="">标题</label>
                                    <input type="text" name="title" class="form-control" value="{$queryParam['title']}">
                                </div>
                                <div class="form-group">
                                    <label for="">内容</label>
                                    <input type="text" name="content" class="form-control" value="{$queryParam['content']}">
                                </div>
                                <div class="form-group">
                                    <label for="">时间</label>
                                    <input type="date" name="sdate" class="inline form-control" id="sdate" value="{$queryParam['sdate']}" min="2017-01-01" max="{:date('Y-m-d')}">
                                    --
                                    <input type="date" name="edate" class="inline form-control" id="edate" value="{$queryParam['edate']}" min="2017-01-01" max="{:date('Y-m-d')}">
                                </div>
                                <button class="btn btn-default form-control" type="submit">搜索</button>
                            </form>
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="col-sm-1"></th>
                            <th class="col-sm-1">艺术号ID</th>
                            <if condition="$type == 1 ">
                                <th class="col-sm-1">序号</th>
                                <else />
                            </if>
                            <th class="col-sm-2">标题</th>
                            <th class="col-sm-1">用户ID</th>
                            <th class="col-sm-1">用户昵称</th>
                            <th class="col-sm-2">发布时间</th>
                            <th class="col-sm-2">操作</th>

                        </tr>
                        </thead>
                        <tbody>
                        <form name="imageform" id="imageform" action="{:U('Admin/RecommendArticle/delete')}"
                              class="form-inline">
                            <foreach name="lists" item="image" key="k">
                                <tr>
                                    <td><input name="id[]" type="checkbox" value="{$image['id']}"/></td>
                                    <td>{$image['id']}</td>
                                    <if condition="$type == 1 ">
                                        <!--<td>{$image['sort']}</td>-->
                                        <td>
                                            <input style="border: 0px;" type="number" class="number" id="sort" name="sort" min="0" value="{$image['sort']}" onblur="changNumber(this.value,<?php echo $image['recommend_id']; ?>)">

                                        </td>
                                        <else />
                                    </if>
                                    <td><?php
                                        echo htmlspecialchars($image['title']);
                                        ?></td>
                                    <td>{$image['artist']}</td>
                                    <td>{$image['nickname']}</td>
                                    <td> <?php echo date('Y-m-d H:i:s',$image['publish_time'])?></td>

                                    <td>
                                        <a href="{:U('Admin/RecommendArticle/detail',['id'=>$image['id']])}">查看详情</a>&nbsp;||&nbsp;
                                        <if condition="$image['type'] == 1 ">
                                            <a href="#" onclick="return delete_comment(<?php echo $image['id']; ?>,this)">
                                                取消推荐</a>
                                            <else />
                                            <a href="#" onclick="return recommend(<?php echo $image['id']; ?>,this)">
                                                推荐</a>
                                        </if>
                                    </td>
                                </tr>
                            </foreach>
                            <tr>
                                <th colspan="10"><a href="#" onclick="return check_all()">全选/全不选</a> &nbsp;|&nbsp;
                                    <a href="#" onclick="return dele_select(this)">取消推荐选中的画作</a></th>
                            </tr>
                        </form>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <!-- TODO:page -->
                    {$nav}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
<block name="customJs">
    <script type="text/javascript">
       $(document).ready(function(){

           /* $('#az-id-date-selector').datetimepicker({
                format:'yyyy-mm-dd',
                language:  'zh-CN',
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0
            });
            $('#az-id-date-selector2').datetimepicker({
                format:'yyyy-mm-dd',
                language:  'zh-CN',
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0
            })*/

           $('.number').bind('input propertychange', function() {
               var re = /^0+$/;
               var re1 = /^[0-9]/;
               if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                   $(this).val('0');
               }
           });

        });

       function checkForm(){
           var mobile = $("#mobile").val();
           var sdate = $("#sdate").val();
           var edate = $("#edate").val();
           var check = true;
           var message = "";

           if(sdate!='' && edate!='' && sdate>edate){
               var check = false;
               message = message + "<li>开始时间不能晚于结束时间!</li>";
           }


           if (check == false) {
               $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                   title: "提示",
                   buttons: {"确定": false}
               });
               return false;
           } else {
               return true;
           }

       }

        function changNumber(value,id){
            $.ajax({
                type: 'post',
                url: '<?php echo U('Admin/RecommendArticle/updateSort');?>',
                data: "id=" + id+"&sort="+value,
                cache: false,
                dataType: 'json',
                error: function (data) {

                },
                success: function (data) {
                    // alert(data);
                    if (data.error == 0) {
                        window.location.href="{:U('RecommendArticle/index')}";
                    }else{
                    }

                }
            });
        }

        function recommend(id, obj) {
            $.prompt("确定推荐该艺术号？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendArticle/recommend');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $("#loading" + id).remove();
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    /*$(obj).parent().parent().remove();*/
                                    window.location.href="{:U('RecommendArticle/index')}";
                                }else{
                                    $("#loading" + id).remove();
                                    $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                        title: "提示",
                                        buttons: {"确定": false}
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        function delete_comment(id, obj) {
            $.prompt("确定取消推荐该艺术号？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendArticle/cancelRecommend');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $("#loading" + id).remove();
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }else{
                                    $("#loading" + id).remove();
                                    $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                        title: "提示",
                                        buttons: {"确定": false}
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        var allCheck = false;
        function check_all() {
            allCheck = !allCheck;
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", allCheck);
            });
        }
        function dele_select(obj) {
            $.prompt("确定取消推荐该艺术号？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendArticle/cancelRecommend');?>',
                            data: $("#imageform").serialize(),
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                //alert(data);
                                if (data.error == 0) {
                                    $("#loading_select").remove();
                                    $('input[name="id[]"]').each(function () {
                                        if ($(this).prop("checked") == true) {
                                            $(this).parent().parent().remove();
                                        }
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }
    </script>
</block>
