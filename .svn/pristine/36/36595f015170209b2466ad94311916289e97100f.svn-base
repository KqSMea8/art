<extend name="Public:base"/>
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    艺术号栏目
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-6">
                            <a class="btn btn-default" href="{:U('Admin/ArticleColumn/showAdd',['page'=>$page])}">添加</a>
                        </div><!-- /.col-lg-6 -->

                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="col-sm-1"></th>
                            <th class="col-sm-1">序号</th>
                            <th class="col-sm-2">栏目名称</th>
                            <th class="col-sm-1">栏目标签</th>
                            <th class="col-sm-1">开启状态</th>
                            <th class="col-sm-1">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <form name="imageform" id="imageform" action="{:U('Admin/ArticleColumn/delete')}"
                              class="form-inline">
                            <foreach name="lists" item="image" key="k">
                                <tr>
                                    <td><input name="id[]" type="checkbox" value="{$image['id']}"/></td>
                                    <td>
                                        <input style="border: 0px;" type="number" class="number" id="sort" name="sort" min="0" value="{$image['sort']}" onblur="changNumber(this.value,<?php echo $image['id']; ?>)">
                                    </td>
                                    <td>{$image['name']}</td>
                                    <td>{$image['tags_id']}</td>
                                    <td>{$image['is_show']}</td>
                                    <td>
                                        <a href="{:U('Admin/ArticleColumn/showEdit',['id'=>$image['id'],'page'=>$page])}">编辑</a>&nbsp;|
                                        <!-- <a href="{:U('Admin/WebsiteConfig/deleteImage',['id'=>$image['id']])}">删除</a>-->
                                        <a href="#" onclick="return delete_comment(<?php echo $image['id']; ?>,this)">
                                            删除</a>
                                    </td>
                                </tr>
                            </foreach>
                            <tr>
                                <th colspan="10"><a href="#" onclick="return check_all()">全选/全不选</a> &nbsp;|&nbsp;
                                    <a href="#" onclick="return dele_select(this)">删除选中的栏目</a></th>
                            </tr>
                        </form>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <!-- TODO:page -->
                    {$nav}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
<block name="customJs">
    <script type="text/javascript">
        $(document).ready(function(){
            $('.number').bind('input propertychange', function() {
                var re = /^0+$/;
                var re1 = /^[0-9]/;
                if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                    $(this).val('0');
                }
            });
        });

        function changNumber(value,id){
            $.ajax({
                type: 'post',
                url: '<?php echo U('Admin/ArticleColumn/updateSort');?>',
                data: "id=" + id+"&sort="+value,
                cache: false,
                dataType: 'json',
                error: function (data) {

                },
                success: function (data) {
                    // alert(data);
                    if (data.error == 0) {
                        window.location.href="{:U('ArticleColumn/index',['page'=>$page])}";
                    }else{
                    }

                }
            });
        }

        function delete_comment(id, obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/ArticleColumn/delete');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        var allCheck = false;
        function check_all() {
            allCheck = !allCheck;
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", allCheck);
            });
        }
        function dele_select(obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/ArticleColumn/delete');?>',
                            data: $("#imageform").serialize(),
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                //alert(data);
                                if (data.error == 0) {
                                    $("#loading_select").remove();
                                    $('input[name="id[]"]').each(function () {
                                        if ($(this).prop("checked") == true) {
                                            $(this).parent().parent().remove();
                                        }
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }
    </script>
</block>
