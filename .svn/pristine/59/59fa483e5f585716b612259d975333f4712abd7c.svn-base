    <script type="text/javascript">
        
    


        function che_form() {
           
            var content = $("#content").val();
			

            var check = true;
            var message = "";
         
			 if ($.trim(content) == '') {
                check = false;
                message = message + "<li>请输入备注</li>";
            }
           
			

            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
				return true;
