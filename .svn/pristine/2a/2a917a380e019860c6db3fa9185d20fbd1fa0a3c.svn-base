html, body {
  width: 100%;
  height: 100%;
}

.clear {
  clear: both;
  overflow: hidden;
}

.overflowline1 {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.overflowline2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

body {
  background: #f5f5f5;
  position: relative;
}

.messageBox {
  max-width: 65rem;
  margin: 0 auto;
}

.goodsLins {
  /* height: 11rem; */
  background: #fff;
  padding: 1.5rem 1.4rem 1.5rem 1.4rem;
}

.goodsLins .mgoodsBox {
  background: #F2F2F2;
  position: relative;
  height: 8rem;
}

.mImg {
  position: absolute;
  display: block;
  width: 8rem;
  height: 8rem;
}

.messageRight {
  padding-left: 9.5rem;
  padding-right: 1.2rem;
  font-size: 1.2rem;
  color: #999;
  background: #F2F2F2;
}

.messageRight .mTitle {
  font-size: 1.5rem;
  color: #333;
  padding-top: 1.2rem;
  padding-bottom: 1rem;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.messageRight .mDesc {
  margin-bottom: 1.4rem;
  font-size: 1.2rem;
  color: #999999;
}

.messageList {
  margin-top: 0.6rem;
  background: #fff;
  max-height: 70vh;
  overflow-y: scroll;
}

.mesListBox .mesItem {
  margin-left: 1.5rem;
  padding-top: 21px;
  padding-bottom: 18px;
  padding-right: 4.8rem;
  border-bottom: 1px solid #D7D7D7;
  background: #fff;
  position: relative;
}

.mesTouxiang {
  position: absolute;
  left: 0;
  display: block;
  width: 4rem;
  height: 4rem;
  border-radius: 50%;
  background: #F2F2F2;
}

.mesText {
  padding-left: 5.2rem;
}

.mesText .mesName {
  font-size: 1.5rem;
  color: #333333;
}

.mesText .mesTime {
  padding-top: 0.9rem;
  padding-bottom: 1.1rem;
  font-size: 1.2rem;
  color: #999999;
}

.mesText .mesHuifu {
  font-size: 1.3rem;
  color: #666666;
}

.moreList {
  width: 6rem;
  text-align: center;
  color: #666666;
  padding: 0.4rem;
  margin: 0 auto;
}

.noMoreList {
  width: 8rem;
  text-align: center;
  color: #666666;
  padding: 0.4rem;
  margin: 0 auto;
}

.ishide {
  display: none;
}

.sendMessage {
  max-width: 65rem;
  min-width: 22rem;
  width: 100%;
  position: absolute;
  bottom: 0;
  /*left: 0;*/
  height: 5.2rem;
  background: #fff;
  border-top: 1px solid #eee;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  padding-left: 1.5rem;
  padding-right: 1.5rem;
}

.sendMessage .msgInput {
  width: 28rem;
  height: 3rem;
  border: none;
  border-radius: 4px;
  padding-left: 0.6rem;
  background: #F2F2F2;
  outline: none;
}

.sendMessage .msgSend {
  width: 5.5rem;
  height: 2.8rem;
  background: #E9AB32;
  border-radius: 4px;
  font-size: 1.2rem;
  text-align: center;
  line-height: 2.8rem;
  margin-left: 1rem;
  border: none;
}
