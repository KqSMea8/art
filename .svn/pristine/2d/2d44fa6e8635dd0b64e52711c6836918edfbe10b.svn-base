<extend name="Public:base"/>
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    标签管理
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-6">
                            <form method="post" action="addTag" id="addform" class="form-inline" onsubmit="return add();">
                                <div class="form-group">
                                    <label for="">标签名</label>
                                    <input type="text" id="name" name="name" class="form-control" style="width:100px;">
                                    &nbsp;
                                    <label for="">排序</label>
                                    <input type="number" id="sort" name="sort" value="10" class="form-control number"
                                           style="width:80px;" min="0">
                                </div>
                                <button class="btn btn-default form-control" type="submit">新增</button>
                            </form>
                        </div><!-- /.col-lg-6 -->
                        <div class="col-lg-6">

                        </div>
                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th></th>
                            <th>标签ID</th>
                            <th>名称</th>
                            <th>排序</th>
                            <th>标签类型</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <form id="tagform" action="{:U('Admin/Article/deleteTag')}"
                              class="form-inline">
                            <foreach name="lists" item="tag" key="k">
                                <tr>
                                    <td><input name="id[]" type="checkbox" value="{$tag['id']}"/></td>
                                    <td>{$tag['id']}</td>
                                    <td>{$tag['cn_name']}</td>
                                    <td>
                                        <input style="border: 0px;" type="number" id="sort" name="sort"  class="number" value="{$tag['sort']}" min="0" onblur="changNumber(this.value,<?php echo $tag['id']; ?>)">
                                    </td>
                                    <td>{$tag['type']}</td>
                                    <td>
                                        <a href="{:U('Admin/Article/showEditTag',['id'=>$tag['id'],'page'=>$page])}">编辑</a>
                                        |&nbsp;<a href="#" onclick="return delete_comment(<?php echo $tag['id']; ?>,this)">删除</a>


                                    </td>
                                </tr>
                            </foreach>
                            <tr>
                                <th colspan="10"><a href="#" onclick="return check_all()">全选/全不选</a> &nbsp;|&nbsp;
                                    <a href="#" onclick="return dele_select(this)">删除选中的标签</a></th>
                            </tr>
                        </form>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <!-- TODO:page -->
                    {$nav}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
<block name="customJs">
    <script>
        $(document).ready(function(){
            /* $('#az-id-date-selector').datetimepicker({
             format:'yyyy-mm-dd',
             language:  'zh-CN',
             weekStart: 1,
             todayBtn:  1,
             autoclose: 1,
             todayHighlight: 1,
             startView: 2,
             minView: 2,
             forceParse: 0
             })*/

            $('.number').bind('input propertychange', function() {
                var re = /^0+$/;
                var re1 = /^[0-9]/;
                if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                    $(this).val('0');
                }
            });


        });


        function changNumber(value,id){
            $.ajax({
                type: 'post',
                url: '<?php echo U('Admin/Article/updateSort');?>',
                data: "id=" + id+"&sort="+value,
                cache: false,
                dataType: 'json',
                error: function (data) {

                },
                success: function (data) {
                    // alert(data);
                    if (data.error == 0) {
                        window.location.href="{:U('Article/tag',['page'=>$page])}";
                    }else{
                    }

                }
            });
        }

        function add() {
            var name = $("#name").val();

            var check = true;
            var message = "";
            if ($.trim(name) == '') {
                check = false;
                message = message + "<li>标签名不能为空</li>";
            }

            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">" + message + "</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('Article/addTag');?>',
                    data: $("#addform").serialize(),
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("error");
                    },
                    success: function (data) {
                        //alert(data);
                        if (data.error == 0) {
                            $.prompt("添加成功！", {
                                title: "提示",
                                buttons: {"确定": true},
                                submit: function (e, v, m, f) {
                                    if (v == true) {
                                        window.location.href = "{:U('Article/tag',['page'=>$page])}";
                                    }
                                }
                            });

                        } else {
                            $.prompt("<span style=\" color:#F00\">" + data.message + "</span>", {
                                title: "提示",
                                buttons: {"确定": false}
                            });
                        }

                    }
                });
                return false;
            }
        }

        function delete_comment(id, obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/Article/deleteTag');?>',
                            data: {"id": id},
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                alert("error");
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }

                            }
                        });
                    } else {

                    }
                }
            });

            return false;
        }

        var allCheck = false;
        function check_all() {
            allCheck = !allCheck;
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", allCheck);
            });
        }
        function dele_select(obj) {
            $.prompt("确定删除？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/Article/deleteTag');?>',
                            data: $("#tagform").serialize(),
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                //alert(data);
                                if (data.error == 0) {
                                    $("#loading_select").remove();
                                    $('input[name="id[]"]').each(function () {
                                        if ($(this).prop("checked") == true) {
                                            $(this).parent().parent().remove();
                                        }
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }
    </script>
</block>
