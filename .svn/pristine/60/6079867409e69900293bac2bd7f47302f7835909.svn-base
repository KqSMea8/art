<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
   <!-- Bootstrap Core CSS -->
    <link href="/Public/Admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="/Public/Admin/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <link href="/Public/Admin/vendor/Magnific-Popup/magnific-popup.css" rel="stylesheet">
    <link href="/Public/Admin/vendor/bootstrap-datetimepicker/bootstrap-datetimepicker.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/Public/Admin/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/Public/Admin/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
<style type="text/css">
body {
	margin-left: 20px;
	margin-top: 0px;
	margin-right: 8px;
	margin-bottom: 0px;
	font-size:16px;
	line-height:25px;
    width: 450px;
    background: #fff;
}

</style>
<script src="/Public/Admin/vendor/jquery/jquery.min.js"></script>
</head>

<body>

<div class="row" style="margin: 10px 10px;">
    <if condition="$artCircle['content']">
        <div class="row">
          {$artCircle['content']}
        </div>
        <else />
    </if>
    <if condition="$artCircle['type'] eq 2">
        <div class="row" style="margin-top: 10px;">
            <ul style="list-style: none;width: 100%;padding: 0">
                <foreach name="artCircle['thumbnails']" item="image" >
                    <li style="width: 150px;height: 150px;float: left;">
                        <img src="{$image}" style="width:140px;height: 140px;">
                    </li>
                </foreach>
            </ul>
        </div>
        <elseif condition="$artCircle['type'] eq 3"/>
        <div class="row" style="margin-top: 10px;">
           <video src="{$artCircle['video_url']}" poster="{$artCircle['video_poster']}" controls="controls" height="300px" width="300px;"></video>
        </div>
        <else />
    </if>
    <div class="row" style="margin-top: 10px;">
        {$artCircle['create_time']}
    </div>
    <!--<div class="row" style="margin-top: 10px;">
        <span style="color: #337ab7"> <i class="fa fa-heart-o"></i> {$artCircle['like_nickname']}</span>
    </div>-->
    <div class="row" style="margin-top: 10px;">
        <span>评论数：{$artCircle['comment_count']}</span>
        <span style="padding-left: 20px;">喜欢数：{$artCircle['like_count']}</span>
    </div>
    <div class="row" style="margin-top: 10px;border-bottom: 1px solid #ddd;">
    </div>
    <div class="row" style="margin-top: 10px;">
        <foreach name="artCircle['comment_list']" item="comment" >
            <div>
                <span style="color: #337ab7">{$comment['commenter']}</span>
                <if condition="$comment['comment_to']">回复  <span style="color: #337ab7">{$comment['comment_to']}</span><else /></if>
                : {$comment['content']}
            </div>
        </foreach>

    </div>
</div>

</body>
</html>
<script type="text/javascript">
function select_artist(uid){
//	alert(obj.href);
$("#artist",window.parent.document).val(uid);
self.parent.tb_remove();
