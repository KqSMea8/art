html, body {
  height: 100%;
  background: #eee;
}
header {
  background: #fff;
  padding: 0.48rem;
  text-align: center;
  line-height: 1.5;
  box-shadow: 0 0.05333rem 0.13333rem rgba(0,0,0,.15);
}
header h1 {
  font-size: 0.56rem;
  color: #333;
  font-weight: 700;
}
header p {
  color: #666;
  font-size: 0.4rem;
}
header p:before {
  content: "";
  display: inline-block;
  width: 0.333333rem;
  height: 0.333333rem;
  background: url(../image/authenticate/tip.png);
  background-size: 100%;
  margin-right: 0.16rem;
  vertical-align: -0.04rem;
}
fieldset {
  border: none;
}
.form-list {
  padding: 0.4rem 0.32rem;
}
.form-list li {
  padding-bottom: 0.4rem;
}
.form-list li input {
  background: #fff;
  width: 100%;
  height: 1.146667rem;
  border: 0.026667rem solid #cacaca;
  border-radius: 0.106667rem;
  padding-left: 0.26667rem;
  font-size: 0.4rem;
}
.form-list li:last-of-type {
  padding-top: 0.4rem;
  padding-bottom: 0;
}
.form-list .photo {
  height: 3.36rem;
  position: relative;
}
.form-list .photo input {
  display: none;
}
.form-list .photo-info {
  padding-top: 0.56rem;
  text-align: center;
}
.form-list .photo-info i {
  display: inline-block;
  width: 1.6rem;
  height: 1.6rem;
  background: url(../image/authenticate/file_photo.png);
  background-size: 100%;
}
.form-list .photo-info p {
  margin-top: 0.213333rem;
  font-size: 0.293333rem;
  color: #666;
}
.form-list .verification input {
  width: 5.493333rem;
}
.form-list .verification span {
  width: 3.613333rem;
  display: inline-block;
  text-align: center;
  line-height: 1.173333rem;
  margin-left: 0.24rem;
  color: #333;
  font-size: 0.4rem;
  height: 1.173333rem;
  background: #eaab32;
  border-radius: 0.106667rem;
}
.form-list textarea {
  background: #fff;
  width: 100%;
  border: 0.026667rem solid #cacaca;
  border-radius: 0.106667rem;
  padding: 0.26667rem;
  font-size: 0.4rem;
}
.form-list .remark,
.form-list .introduce {
  padding-bottom: 0.26667rem;
}

.form-list .finish {
  /*height: 10.426667rem;*/
}
.form-list .finish input {
  padding: 0;
  font-weight: 700;
  border: none;
  background: #eaab32;
}

.form-list .update {
  position: relative;
  padding-left: 0.26667rem;
  width: 100%;
  font-size: 0.4rem;
  text-align: center;
  color: #6ea6c3;
  background: #fff;
  border: 0.026667rem dashed #6ea6c3;
  border-radius: 0.106667rem;
}
.form-list .update span {
  display: inline-block;
  line-height: 1.12rem;
  vertical-align: middle;
}
.form-list .update span:first-of-type {
  padding-right: 0.13333rem;
  font-size: 0.8rem;
  font-weight: 100;
}
.form-list .pic-list {
  padding-top: 0.16rem;
}
.form-list .pic-list .pic-item {
  margin-left: 0.10667rem;
  width: 1.66667rem;
  height: 1.66667rem;
  border: 0.026667rem dashed #6ea6c3;
  border-radius: 0.106667rem;
}
.form-list .num {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 0.32rem;
  color: #999;
}