<extend name="Public:base" />
<block name="content">
    <link href="/Public/Admin/js/jquery-impromptu/jquery-impromptu.css" rel="stylesheet">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    编辑栏目
                </div>
                <div class="panel-body">
                    <form id="form" class="form-horizontal"  method="post" action="{:U('ArticleColumn/edit')}" enctype="multipart/form-data" onsubmit="return edit();">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">栏目名称</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="name" name="name" value="{$data['name']}"">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">栏目标签</label>
                            <div class="col-sm-6">
                                <table>
                                    <foreach name="tags" item="tag" key="k">
                                        <if condition="$k%10 == 0">
                                            <tr>
                                                <td> <input  type="checkbox" name="tag[]" value="{$tag['id']}" <?php if ($tag['check'] == 1) {
                                                        echo 'checked';} ?>>{$tag['cn_name']}&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                <else />
                                                <if condition="$k%10 == 9">
                                                    <td> <input  type="checkbox" name="tag[]" value="{$tag['id']}" <?php if ($tag['check'] == 1) {
                                                            echo 'checked';} ?>>{$tag['cn_name']}&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                            </tr>
                                            <else />
                                            <td> <input  type="checkbox" name="tag[]" value="{$tag['id']}" <?php if ($tag['check'] == 1) {
                                                    echo 'checked';} ?>>{$tag['cn_name']}&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                        </if>
                                        </if>

                                    </foreach>
                                </table>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">栏目序号</label>
                            <div class="col-sm-2">
                                <input type="number" id="sort" name="sort" class="form-control number" value="{$data['sort']}" min="0">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">开启状态</label>
                            <div class="col-sm-2">
                                <select name="is_show" class="form-control">
                                    <option value="Y" <?php if($data['type'] == 'Y') {echo 'selected';}?>>开
                                    </option>
                                    <option value="N" <?php if($data['type'] == 'N') {echo 'selected';}?>>关
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="id" value="{$data['id']}">
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success" id="submit">确定</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="{:U('ArticleColumn/index',['page'=>$page])}" class="btn btn-default">返回</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</block>
<block name="customJs">
    <script>
        $(document).ready(function(){
            $('.number').bind('input propertychange', function() {
                var re = /^0+$/;
                var re1 = /^[0-9]/;
                if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                    $(this).val('0');
                }
            });
        });
        function edit() {
            var name = $("#name").val();

            var check = true;
            var message = "";
            if ($.trim(name) == '') {
                check = false;
                message = message + "<li>图片不能为空</li>";
            }
            if (check == false) {
                $.prompt("<span style=\" color:#AD6C14\">"+message+"</span>", {
                    title: "提示",
                    buttons: {"确定": false}
                });
                return false;
            } else {
                var formData = new FormData($(".form-horizontal")[0]);
                $.ajax({
                    type: 'post',
                    url: '<?php echo U('ArticleColumn/edit');?>',
                    data: formData,
                    contentType: false,
                    processData: false,
                    cache: false,
                    dataType: 'json',
                    error: function (data) {
                        alert("error");
                    },
                    success: function (data) {
                       // alert(data);
                        if (data.error == 0) {
                            $.prompt("修改成功！", {
                                title: "提示",
                                buttons: {"确定": true},
                                submit: function (e, v, m, f) {
                                    if (v == true) {
                                        window.location.href="{:U('ArticleColumn/index',['page'=>$page])}";
                                    }
                                }
                            });

                        }else{
                            $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                title: "提示",
                                buttons: {"确定": false}
                            });
                        }

                    }
                });
                return false;
            }
        }
    </script>
</block>