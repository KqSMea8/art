html {
  background-color: #f4f4f4;
}
h2 {
  margin-bottom: 20px;
  font-size: 28px;
}
#main {
  padding-top: 20px;
  padding-bottom: 22px;
}
.base-info {
  padding-bottom: 30px;
}
.base-info p {
  display: inline-block;
  color: #989898;
}
.base-info .from {
  padding-left: 10px;
}
.article-info {
  margin-top: 20px;
  margin-bottom: 44px;
  padding: 35px 25px 20px 30px;
  background-color: #fff;
  box-shadow: 0 0 5px rgba(26, 26, 26, 0.18);
}

/*观察总数*/
.view-total .icons.icon-eye {
  height: 24px;
  width: 24px;
  vertical-align: middle;
  background-position: -375px -101px;
}
.view-total {
  height: 36px;
  line-height: 36px;
  text-align: right;
  font-size: 12px;
  color: #989898;
}
/*观察总数end*/

/*推荐*/
.other-wrap {
  margin-top: 36px;
}
.other-wrap h3 {
  line-height: 60px;
  font-size: 16px;
}
.other-wrap .swiper-wrap {
  position: relative;
}
.other-wrap .swiper-container {
  margin: 0 auto;
  width: 843px;
  height: 100%;
}
.other-wrap .swiper-slide {
  text-align: center;
  background: #fff;
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 5px;
  border: 1px solid #eee;
  box-shadow: 0px 0px 5px rgba(26, 26, 26, 0.18);
}
.other-wrap .swiper-slide:hover {
  border: 1px solid #f4ad23;
  box-shadow: 0px 0px 5px rgba(244, 173, 35, 0.18);
}
.other-wrap .swiper-slide img {
  width: 180px;
  height: 180px;
}
.other-wrap [class^="arrow-"] {
  position: absolute;
  top: 0;
  width: 30px;
  height: 192px;
  line-height: 192px;
  font-size: 20px;
  text-align: center;
  font-family: "FangSong", "SimSun", -apple-system-font, "PingFang SC Medium"," Microsoft YaHei", "Heiti SC", Helvetica, HelveticaNeue, Droidsansfallback, "Droid Sans", Dengxian, Segoe, "microsoft yahei", sans-serif;;
  color: #989898;
  background-color: #fff;
  z-index: 10;
}
.other-wrap .arrow-left {
  left: 0;
}
.other-wrap .arrow-right {
  right: 0;
}
.other-wrap [class^="arrow-"]:hover {
  color: #f4ad23;
}
.swiper-button-disabled,
.noclick {
  cursor: not-allowed;
}
/*推荐 end*/