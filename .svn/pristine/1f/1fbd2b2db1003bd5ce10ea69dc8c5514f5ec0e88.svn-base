<extend name="Public:base"/>
<block name="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    推荐专题
                </div>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="{:U('RecommendSubject/index')}" class="form-inline">
                                <div class="form-group">
                                    <label for="">专题名称</label>
                                    <input type="text" name="title" class="form-control" value="{$queryParam['title']}" >
                                </div>
                                <button class="btn btn-default form-control" type="submit">搜索</button>
                            </form>
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="col-sm-1"></th>
                            <th class="col-sm-1">ID</th>
                            <if condition="$type == 1 ">
                                <th class="col-sm-1">序号</th>
                                <else />
                            </if>
                            <th class="col-sm-1">专题名称</th>
                            <th class="col-sm-2">专题简述</th>
                            <th class="col-sm-1">封面图</th>
                            <th class="col-sm-2">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <form name="imageform" id="imageform" action="{:U('Admin/RecommendSubject/delete')}"
                              class="form-inline">
                            <foreach name="lists" item="image" key="k">
                                <tr>
                                    <td><input name="id[]" type="checkbox" value="{$image['recommend_id']}"/></td>
                                    <td>{$image['id']}</td>
                                    <if condition="$type == 1 ">
                                       <!-- <td>{$image['sort']}</td>-->
                                        <td>
                                            <input style="border: 0px;" type="number" class="number" id="sort" name="sort" min="0" value="{$image['sort']}" onblur="changNumber(this.value,<?php echo $image['recommend_id']; ?>)">
                                        </td>
                                        <else />
                                    </if>
                                    <td>{$image['subname']}</td>
                                    <td>{$image['sub_title']}</td>
                                    <td>
                                        <img src="{$image['imgurl']}" alt="" style="width:100px;">
                                    </td>

                                    <td>
                                        <a href="{:U('Admin/RecommendSubject/getDetail',['id'=>$image['id'],'type'=>$image['type']])}">查看详情</a> &nbsp;||&nbsp;
                                        <if condition="$image['is_recommend'] == 1 ">
                                            <a href="#" onclick="return delete_comment(<?php echo $image['recommend_id']; ?>,this)">
                                                取消推荐</a>&nbsp;||&nbsp;
                                            <a href="{:U('Admin/RecommendSubject/edit',['id'=>$image['id'],'type'=>$image['type']])}">编辑</a>
                                            <else />
                                            <!--<a href="#" onclick="return recommend(<?php /*echo $image['id']; */?>,<?php /*echo $image['type']; */?>,this)">
                                                推荐</a>-->
                                            <a href="{:U('Admin/RecommendSubject/edit',['id'=>$image['id'],'type'=>$image['type']])}">推荐</a>
                                        </if>
                                    </td>
                                </tr>
                            </foreach>
                            <tr>
                                <th colspan="10"><a href="#" onclick="return check_all()">全选/全不选</a> &nbsp;|&nbsp;
                                    <a href="#" onclick="return dele_select(this)">取消推荐选中的专题</a></th>
                            </tr>
                        </form>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <!-- TODO:page -->
                    {$nav}
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</block>
<block name="customJs">
    <script type="text/javascript">
        $(document).ready(function(){
            $('.number').bind('input propertychange', function() {
                var re = /^0+$/;
                var re1 = /^[0-9]/;
                if (re.test($(this).val()) || $(this).val()<0 || !re1.test($(this).val())) {
                    $(this).val('0');
                }
            });
        });

        function changNumber(value,id){
            $.ajax({
                type: 'post',
                url: '<?php echo U('Admin/RecommendSubject/updateSort');?>',
                data: "id=" + id+"&sort="+value,
                cache: false,
                dataType: 'json',
                error: function (data) {

                },
                success: function (data) {
                    // alert(data);
                    if (data.error == 0) {
                        window.location.href="{:U('RecommendSubject/index')}";
                    }else{
                    }

                }
            });
        }

        function recommend(id,type, obj) {
            $.prompt("确定推荐该专题？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendSubject/recommend');?>',
                            data: "id=" + id+"&type="+type,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $("#loading" + id).remove();
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    /*$(obj).parent().parent().remove();*/
                                    window.location.href="{:U('RecommendSubject/index')}";
                                }else{
                                    $("#loading" + id).remove();
                                    $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                        title: "提示",
                                        buttons: {"确定": false}
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        function delete_comment(id,obj) {
            $.prompt("确定取消推荐该专题？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading" + id + "' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendSubject/cancelRecommend');?>',
                            data: "id=" + id,
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $("#loading" + id).remove();
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                // alert(data);
                                if (data.error == 0) {
                                    $("#loading" + id).remove();
                                    $(obj).parent().parent().remove();
                                }else{
                                    $("#loading" + id).remove();
                                    $.prompt("<span style=\" color:#F00\">"+data.message+"</span>", {
                                        title: "提示",
                                        buttons: {"确定": false}
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }

        var allCheck = false;
        function check_all() {
            allCheck = !allCheck;
            $('input[name="id[]"]').each(function () {
                $(this).prop("checked", allCheck);
            });
        }
        function dele_select(obj) {
            $.prompt("确定取消推荐该专题？", {
                title: "提示",
                buttons: {"确定": true, "取消": false},
                submit: function (e, v, m, f) {
                    if (v == true) {
                        $(obj).after("<img id='loading_select' src='/Public/Admin/image/loading.gif' /> ");
                        $.ajax({
                            type: 'post',
                            url: '<?php echo U('Admin/RecommendSubject/cancelRecommend');?>',
                            data: $("#imageform").serialize(),
                            cache: false,
                            dataType: 'json',
                            error: function (data) {
                                $.prompt("<span style=\" color:#F00\">error</span>", {
                                    title: "提示",
                                    buttons: {"确定": false}
                                });
                            },
                            success: function (data) {
                                //alert(data);
                                if (data.error == 0) {
                                    $("#loading_select").remove();
                                    $('input[name="id[]"]').each(function () {
                                        if ($(this).prop("checked") == true) {
                                            $(this).parent().parent().remove();
                                        }
                                    });
                                }

                            }
                        });
                    }else{

                    }
                }
            });
            return false;
        }
    </script>
</block>
